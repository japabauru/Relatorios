SELECT T0."DocEntry" AS "Numero do esbo√ßo", 
T1."LineNum" AS "Numero da linha",
T1."ItemCode", 
T1."Dscription", 
T1."Quantity" , 
T3."WhsCode", 
T3."OnHand" 

FROM ODRF T0  
INNER JOIN DRF1 T1 ON T0."DocEntry" = T1."DocEntry" 
INNER JOIN OITM T2 ON T1."ItemCode" = T2."ItemCode" 
INNER JOIN OITW T3 ON T2."ItemCode" = T3."ItemCode" 
 
 WHERE T0."DocEntry" = [%0] AND  T3."WhsCode" =  [%1] 

ORDER BY T1."LineNum"
